---
title: Open House Gdansk - Poprzednie edycje
layout: 'base.njk'
---

<h1>Program</h1>

<div class="wrapper">
    <div class="events">

        {%- for program in collections.program -%}
            {% if program.data.tags.includes("towarzyszace") %}

                <div class="grid event" data-tag="{{program.data.tags}}">
                    <h3 class="event-title">{{program.data.title}}</h3>
                    <img class="grid__img" src="/assets/img/OHG7/1.jpg" alt="Bricks">
                    <div class="grid__overlay grid__overlay--primary">
                        <div class="grid__title"><h3>{{program.data.title}}</h3></div>
                        <p class="grid__description">
                        <p>Lokalizacja eventu</p>
                        <a href="{{program.url}}">Przeczytaj więcej</a>
                        </p>
                    </div>
                </div>
            {% endif %}
        {%- endfor -%}

    </div>
    <div class="sidebar">

        <div class="button-menu">
            <h4>Dzień:</h4>
            <button class="button"><a href="/sobota/">Sobota</a></button>
            <button class="button"><a href="/niedziela/">Niedziela</a></button>
        </div>

        <div class="button-menu">
            <h4>Tag:</h4>
            <button class="button" id="zwiedzanie">Zwiedzanie</button>
            <button class="button" id="spacer">Spacer</button>
            <button class="button" id="spotkanie">Spotkanie</button>
            <button class="button" id="wystawa">Wystawa</button>
            <button class="button" id="koncert">Koncert</button>
            <button class="button" id="wszystkie">Wszystkie</button>
        </div>
    </div>
</div>

